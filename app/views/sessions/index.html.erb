<div class="text-center">
	<% if flash[:errors] %>
		<ul style="margin: auto;">
		  <% flash[:errors].each do |e| %>
		    <li><%= e %></li>
		  <% end %>
		</ul>
	<% end %>
</div>
<div class="row">
	<div class="col-sm-1"></div>
	<div class="col-sm-5 card">
		<h1>Register</h1>
		<form action="/users" method="post" style="width:80%">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<label>Name:</label>
			<input class="form-control" type="text" name="user[name]"><br>
			<label>Email:</label>
			<input class="form-control" type="text" name="user[email]"><br>
			<label>Password:</label>
			<input class="form-control" type="password" name="user[password]"><br>
			<input class="btn btn-primary pull-right" type="submit" value="Register">
		</form>
	</div>
	<div class="col-sm-1"></div>
	<div class="col-sm-4 card">
		<h1>Log In</h1>
		<form action="/sessions" method="post" style="width:80%">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<label>Email:</label>
			<input class="form-control" type="text" name="email"><br>
			<label>Password:</label>
			<input class="form-control" type="password" name="password"><br>
			<input class="btn btn-primary pull-right" type="submit" value="LogIn">
		</form>
	</div>
</div>